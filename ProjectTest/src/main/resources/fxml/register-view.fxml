<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.project.Controller.RegisterController"
      alignment="CENTER" spacing="20" stylesheets="@../css/buatakun.css" style="-fx-background-color: #f5f5f5;"
      prefWidth="400" prefHeight="500">

    <fx:define>
        <Font fx:id="titleFont" name="System Bold" size="24.0" />
        <Font fx:id="labelFont" name="System" size="14.0" />
    </fx:define>

    <Label text="Create Account" font="$titleFont" />

    <VBox fx:id="formVBox" alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10;">
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150" prefWidth="200" />
            </columnConstraints>

            <Label text="Username:" font="$labelFont" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="usernameField" promptText="4-25 alphanumeric characters" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Password:" font="$labelFont" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <PasswordField fx:id="passwordField" promptText="Min 4 chars with mix case, numbers, symbols" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Confirm Password:" font="$labelFont" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <PasswordField fx:id="confirmField" promptText="Re-enter your password" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <Button text="Register" onAction="#handleRegister" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
            <Button text="Back to Login" onAction="#backToLogin" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
        </HBox>
    </VBox>

    <Label text="Already have an account? Click 'Back to Login'">
        <font>
            <Font name="System Italic" size="12.0" />
        </font>
    </Label>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>
