<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.project.Controller.LoginController"
            prefWidth="800" prefHeight="500"
            style="-fx-background-color: #f8f9fa;" stylesheets="@../css/login.css">

    <!-- Left Branding Panel -->
    <VBox alignment="CENTER" spacing="30"
          style="-fx-background-color: linear-gradient(to bottom right, #1B5E20, #388E3C);"
          prefWidth="350" prefHeight="500">
        <Label text="TASKFLOW"
               style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
        <Label text="Your Productivity Companion"
               style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 16px;"/>
    </VBox>

    <!-- Right Form Panel (with animation support) -->
    <AnchorPane fx:id="formPane"
                style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 10, 0, 0, 0;"
                prefWidth="450" prefHeight="500"
                AnchorPane.rightAnchor="0">

        <VBox alignment="CENTER" spacing="30"
              layoutX="75" layoutY="100"
              prefWidth="300">

            <!-- Form Header -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Welcome Back"
                       style="-fx-text-fill: #2E7D32; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Please login to continue"
                       style="-fx-text-fill: #757575; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Login Form -->
            <VBox spacing="25" prefWidth="300">
                <VBox spacing="5">
                    <Label text="Username" style="-fx-text-fill: #424242; -fx-font-size: 14px;"/>
                    <TextField fx:id="usernameField"
                               style="-fx-background-color: #f5f5f5; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 10;"/>
                </VBox>

                <VBox spacing="5">
                    <Label text="Password" style="-fx-text-fill: #424242; -fx-font-size: 14px;"/>
                    <PasswordField fx:id="passwordField"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 4; -fx-border-color: #e0e0e0; -fx-border-radius: 4; -fx-padding: 10;"/>
                </VBox>

                <Button text="LOGIN"
                        onAction="#handleLogin"
                        style="-fx-background-color: #388E3C; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 4; -fx-padding: 12; -fx-cursor: hand;"
                        prefWidth="300"/>
            </VBox>

            <!-- Footer Links -->
            <HBox spacing="30" alignment="CENTER">
                <Hyperlink text="Create Account"
                           onAction="#openRegister"
                           style="-fx-text-fill: #388E3C; -fx-font-size: 13px; -fx-cursor: hand;"/>

                <Hyperlink text="Forgot Password?"
                           onAction="#openReset"
                           style="-fx-text-fill: #388E3C; -fx-font-size: 13px; -fx-cursor: hand;"/>
            </HBox>
        </VBox>
    </AnchorPane>

    <!-- Close Button -->
    <Button text="X" onAction="#handleClose"
            style="-fx-background-color: transparent; -fx-text-fill: #616161; -fx-font-weight: bold; -fx-font-size: 16px;"
            AnchorPane.topAnchor="20" AnchorPane.rightAnchor="20"/>
</AnchorPane>
