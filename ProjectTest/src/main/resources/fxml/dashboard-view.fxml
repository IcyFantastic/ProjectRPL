<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.project.Controller.MainController"
stylesheets="@../css/dashboard.css">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <spacing>10</spacing>

    <!-- Header Section -->
    <HBox styleClass="header-box" spacing="10" alignment="CENTER_LEFT">
        <Label text="To-Do List" styleClass="header-label" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <Button text="Tambah Aktivitas" onAction="#addActivity" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Kelola Kategori" onAction="#manageCategories" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>

    <!-- Filter Section -->
    <HBox styleClass="filter-box" spacing="10" alignment="CENTER_LEFT">
        <Label text="Filter:"/>

        <Label text="Status:"/>
        <ComboBox fx:id="filterStatus" onAction="#filterChanged" prefWidth="100"/>

        <Label text="Prioritas:"/>
        <ComboBox fx:id="filterPriority" onAction="#filterChanged" prefWidth="100"/>

        <Label text="Kategori:"/>
        <ComboBox fx:id="filterCategory" onAction="#filterChanged" prefWidth="150"/>

        <Label text="Cari:"/>
        <TextField fx:id="searchField" onKeyReleased="#searchActivities" prefWidth="200"/>
    </HBox>

    <!-- Activity List Header -->
    <HBox styleClass="list-header" spacing="10" style="-fx-background-color: #e0e0e0; -fx-padding: 5;">
        <Label text="Judul" prefWidth="150"/>
        <Label text="Tanggal" prefWidth="100"/>
        <Label text="Kategori" prefWidth="100"/>
        <Label text="Prioritas" prefWidth="80"/>
        <Label text="Status" prefWidth="80"/>
        <Region prefWidth="50"/> <!-- Spacer for buttons -->
        <Region prefWidth="50"/> <!-- Spacer for buttons -->
        <Region prefWidth="50"/> <!-- Spacer for buttons -->
    </HBox>

    <!-- Activity List -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
        <VBox fx:id="activityList" spacing="5"/>
    </ScrollPane>
</VBox>