                <TableColumn fx:id="colCategory" text="Kategori" />
                <TableColumn fx:id="colPriority" text="Prioritas" />
                <TableColumn fx:id="colStatus" text="Status" />
                <TableColumn fx:id="colDescription" prefWidth="398.6666564941406" text="Deskripsi" />
            </columns>
        </TableView>
