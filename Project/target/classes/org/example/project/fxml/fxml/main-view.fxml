<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.project.Controller.MainController" prefWidth="800" prefHeight="600">
    <top>
        <ToolBar>
            <Button text="Tambah" onAction="#addActivity" />
            <Button text="Edit" onAction="#editActivity" />
            <Button text="Hapus" onAction="#deleteActivity" />
            <Button text="Mark Selesai" onAction="#markCompleted" />
            <Separator />
            <Button text="Kategori" onAction="#manageCategories" />
            <Separator />
            <TextField fx:id="searchField" promptText="Cari..." onKeyReleased="#searchActivities" />
            <ComboBox fx:id="filterStatus" promptText="Status" onAction="#filterChanged" />
            <ComboBox fx:id="filterPriority" promptText="Prioritas" onAction="#filterChanged" />
            <ComboBox fx:id="filterCategory" promptText="Kategori" onAction="#filterChanged" />
            <Button text="Logout" onAction="#handleLogout" />
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="activityTable">
            <columns>
                <TableColumn text="Judul" fx:id="colTitle" />
                <TableColumn text="Tanggal" fx:id="colDate" />
                <TableColumn text="Kategori" fx:id="colCategory" />
                <TableColumn text="Prioritas" fx:id="colPriority" />
                <TableColumn text="Status" fx:id="colStatus" />
            </columns>
        </TableView>
    </center>
</BorderPane>
