<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.project.Controller.MainController">
    <top>
        <ToolBar>
            <Button onAction="#addActivity" text="Tambah" />
            <Button onAction="#editActivity" text="Edit" />
            <Button onAction="#deleteActivity" text="Hapus" />
            <Button onAction="#markCompleted" text="Mark Selesai" />
            <Separator />
            <Button onAction="#manageCategories" text="Kategori" />
            <Separator />
            <TextField fx:id="searchField" onKeyReleased="#searchActivities" promptText="Cari..." />
            <ComboBox fx:id="filterStatus" onAction="#filterChanged" promptText="Status" />
            <ComboBox fx:id="filterPriority" onAction="#filterChanged" promptText="Prioritas" />
