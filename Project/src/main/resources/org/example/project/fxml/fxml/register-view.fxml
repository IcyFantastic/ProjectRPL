<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.project.Controller.RegisterController" prefWidth="400" prefHeight="400">
    <children>
        <VBox id="mainContainer" stylesheets="@../css/styles.css" spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
            <Label text="Register Account" styleClass="header-label"/>
            <TextField fx:id="usernameField" promptText="Username (4-25 chars)" />
            <PasswordField fx:id="passwordField" promptText="Password (min 4 chars, mix)" />
            <PasswordField fx:id="confirmField" promptText="Confirm Password" />
            <Button text="Register" onAction="#handleRegister" />
            <Hyperlink text="Back to Login" onAction="#backToLogin" />
        </VBox>
    </children>
</AnchorPane>
