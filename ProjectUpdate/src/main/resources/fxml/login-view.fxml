<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.project.Controller.LoginController"
            prefWidth="800" prefHeight="500"
            stylesheets="@../css/login.css">

    <!-- Split HBox: kiri hijau, kanan putih -->
    <HBox prefWidth="800" prefHeight="500">
        <!-- Left panel -->
        <VBox fx:id="brandingPane" prefWidth="400" prefHeight="500" spacing="20" styleClass="branding-pane">
            <children>
                <Label text="#001" style="-fx-font-size: 18px;" />
                <Label text="LOGIN UI" style="-fx-font-size: 36px; -fx-font-weight: bold;" />
                <Label text="become a better JavaFX interface designer in 1000 days" wrapText="true" />
            </children>
        </VBox>

        <!-- Right panel-->
        <AnchorPane fx:id="formPane"
                    prefWidth="400" prefHeight="500"
                    style="-fx-background-color: white;">

            <VBox alignment="TOP_CENTER"
                  spacing="20"
                  layoutX="50" layoutY="100"
                  prefWidth="300">

                <Label text="LOGIN"
                       style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

                <TextField fx:id="usernameField"
                           promptText="User Name"
                           style="-fx-background-radius: 0; -fx-border-width: 0 0 2 0; -fx-border-color: #26A69A; -fx-padding: 0 0 5 0;"/>

                <PasswordField fx:id="passwordField"
                               promptText="Password"
                               style="-fx-background-radius: 0; -fx-border-width: 0 0 2 0; -fx-border-color: #26A69A; -fx-padding: 0 0 5 0;"/>

                <Button text="LOGIN"
                        onAction="#handleLogin"
                        prefWidth="200" prefHeight="40"
                        style="-fx-background-color: #26A69A; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 20;"/>

                <HBox spacing="40" alignment="CENTER">
                    <Hyperlink text="Buat Akun" onAction="#openRegister" />
                    <Hyperlink text="Lupa Password?" onAction="#openReset" />
                </HBox>
            </VBox>

        </AnchorPane>
    </HBox>
</AnchorPane>